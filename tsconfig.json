{
  "compilerOptions": {
    // "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    // "jsx": "react",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true
  },
  "exclude": ["node_modules/*"],
  "include": ["client/src/**/*.ts"]
}
